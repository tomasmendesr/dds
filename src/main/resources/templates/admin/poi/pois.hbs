{{#partial "contenido"}}
<h1>Admin</h1>

<form action="/admin/pois" method="POST">
<label for="nombre">Nombre</label>
<input type="text" placeholder="Nombre" name="nombreBuscado">
<label for="tipo">Tipo</label>
<input type="text" placeholder="Tipo" name="tipoBuscado">
<input type="submit" name="buscar" value="Buscar">
<input type="submit" name="deshacer" value="Deshacer Filtro">
</form>
<table class="table table-stripped">
	<tr>
		<th>Nombre</th>
		<th>Tipo</th>
		<th>Direccion</th>
		<th></th>
		<th></th>
	</tr>
	
	{{#each pois}}
		<tr>
			<td>{{nombre}}</td>
			<td>{{tipoDePOI}}</td>
			<td>{{direccion}}</td>
			<td><a href="/admin/pois/modificar/{{url}}"">Modificar</a><td>
			<td><a href="/admin/pois/eliminar/{{url}}" method="POST">Eliminar<td>
		</tr>
	{{/each}}
</table>
<a href="/admin"><button>Volver</button></a>
{{/partial}}
{{>layout.hbs}}
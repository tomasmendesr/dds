{{#partial "contenido"}}
{{#with terminal}}
	
<h1>Modificar Terminal</h1>

<form action="/admin/terminales/modificar/{{url}}" method="POST">
	<p><label for="nombre">Nombre: {{nombre}} </label></p>
	<p><input type="text" name="nombreNuevo" placeholder="Nuevo nombre" ></p>
	<p><label for="comuna">Comuna: {{comuna}} </label></p>
	<p><input type="text" name="comunaNueva" placeholder="Nueva comuna" ></p>
	
	<p class="submit"><input type="submit" name="guardar" value="Guardar"></p>
</form>
{{/with}}
{{/partial}}

{{>layout.hbs}}